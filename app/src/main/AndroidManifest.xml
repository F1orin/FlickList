<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.com.florin.flicklist">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".complete.activity.FlickListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".workflow.activity.EndlessListActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".workflow.activity.ImageListActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".workflow.activity.FlickrTestActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".workflow.activity.EndlessImageListActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".workflow.activity.EndlessFlickrActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".workflow.activity.ButtonsActivity"
            android:label="@string/app_name" />
    </application>

</manifest>
